{
  "name": "emaily_mern_stack",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": "10.16.3",
    "yarn": "1.19.1"
  },
  "repository": "https://github.com/superapplejuice/Emaily-MERN-Stack.git",
  "author": "Jan Mathew <janmathew@MacBookPro.local>",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^5.0.0",
    "nodemon": "^1.19.4"
  },
  "scripts": {
    "server-install": "yarn --cwd server install",
    "client-install": "yarn --cwd client install",
    "boot": "concurrently \"yarn server-install\" \"yarn client-install\"",
    "server-start": "yarn --cwd server server",
    "client-start": "yarn --cwd client start",
    "dev": "concurrently \"yarn server-start\" \"yarn client-start\"",
    "start": "node server",
    "server": "nodemon server",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false yarn --cwd client install && yarn --cwd client build"
  }
}
